{
  "compileOnSave"  : false,
  "compilerOptions": {
    "allowJs"                       : true,
    "declaration"                   : true,
    "declarationDir"                : "lib",
    "emitDecoratorMetadata"         : true,
    "esModuleInterop"               : true,
    "experimentalDecorators"        : true,
    "importsNotUsedAsValues"        : "error",
    "inlineSourceMap"               : false,
    "inlineSources"                 : false,
    "lib"                           : [
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "module"                        : "ESNext",
    "moduleResolution"              : "node",
    "noImplicitOverride"            : true,
    "outDir"                        : "lib",
    "skipDefaultLibCheck"           : true,
    "skipLibCheck"                  : true,
    "sourceMap"                     : true,
    "strict"                        : true,
    "suppressImplicitAnyIndexErrors": true,
    "target"                        : "ESNext"
  },
  "include"        : [
    "src/**/*.ts",
    "src/**/*.js",
    "declarations/*.d.ts"
  ],
  "exclude": [
    "~*",
    "_*"
  ]
}
